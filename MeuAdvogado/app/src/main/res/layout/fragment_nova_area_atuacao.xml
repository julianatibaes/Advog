<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context="com.tibaes.meuadvogado.com.tibaes.meuadvogado.fragment.NovaAreaAtuacaoFragment">

    <TextView
        android:id="@+id/text_atuacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Área de atuação"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/edit_atuacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TRABALHISTA"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/btn_atuacao_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="SALVAR"/>

</LinearLayout>
