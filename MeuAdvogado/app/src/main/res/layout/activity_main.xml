<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context="com.tibaes.meuadvogado.MainActivity">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.tibaes.meuadvogado.ListaAdvogadosFragment"
        tools:layout="@layout/fragment_lista_advogados"
        android:id="@+id/list_adv"/>

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        class="com.tibaes.meuadvogado.NovoAdvogadoFragment"
        tools:layout="@layout/fragment_novo_advogado"
        android:id="@+id/new_adv"/>

</LinearLayout>
